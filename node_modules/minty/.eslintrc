{
  "extends": "airbnb",
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "__dirname": true,
    "$": true,
    "expect": true
  },
  "rules": {
      "no-trailing-spaces": [2, { "skipBlankLines": true }],
      "no-use-before-define": 0,
      "space-before-function-paren": 0,
      "func-names": 0,
      "strict": 0,
      "no-eval": 0,
      "prefer-rest-params": 0,
      "no-console": 0,
      "prefer-template": 0,
      "max-len": 0,
      "object-shorthand": 0,
      "guard-for-in": 0,
  }
}
